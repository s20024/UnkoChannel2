<div>
    <div id="category_title">
        <h3><%= category.title %></h3>
        <h2>Select Thread</h2>
        <% if (currentUser) { %>
            <a href="/<%= category._id %>/new">
                <h3>+ Create new Thread</h3>
            </a>
        <% } else { %>
            <a href="/users/login?category=<%= category._id %>" >
                <h3>+ Create new Thread</h3>
            </a>
        <% } %>
    </div>
    <div id="category_contents">
        <% if (threads !== undefined) { %>
            <% threads.forEach(thread => { %>
                <div class="category_thread_sort">
                    <a href="/<%= category._id %>/<%= thread._id %>/all">
                        <div class="category_thread" style="text-align: center">
                            <div>
                                <%= thread.title %>
                                <div>
                                    <% const updateDay = new Date(thread.updatedAt) %>
                                    Last Update:<%= `${updateDay.getFullYear()}/${updateDay.getMonth() + 1}/${updateDay.getDate()}` %>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

